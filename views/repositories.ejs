<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>repositories</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-dark.min.css">
    <link href="https://github-profile-nw3k.onrender.com/style/rep.css" rel="stylesheet">  
</head>
  <body>
    <div class="container">
        <div class="p-5 mb-4 bg-body-tertiary rounded-3" style="background:#00000070;">
            <div class="container-fluid py-5 ">
              <h1 class="display-5 fw-bold"><span class="badge bg-secondary"><%= username %></span></h1>
              <div class="row">
              <div class="col-md-4 fs-4 p-4">
              <img src='<%= uinfo.img %>' class="rounded-circle mx-auto d-block" alt="..." style="width: 150px;">
            </div>
              <div class="col-md-8 fs-4">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><h5>Name : <span class="badge bg-secondary"><%= uinfo.name %></span></h5></li>
                    <li class="list-group-item"><h5>Followers : <span class="badge bg-secondary"><%= uinfo.followers %></span></h5></li>
                    <li class="list-group-item"><h5>Following : <span class="badge bg-secondary"><%= uinfo.following %></span></h5></li>
                    <li class="list-group-item"><h5>Public_repos : <span class="badge bg-secondary"><%= uinfo.public_repos %></span></h5></li>
                  
                  </ul>
                  <a class="btn btn-primary btn-lg m-4" href="https://github.com/<%= username %>" >View in github</a>
                </div>
            </div>
              
            </div>
          </div>
        <div class="row">
            <% repositories.forEach(repo => { %>
            <div class="col-lg-6">
                <div class="card card-margin">
                    <div class="card-header p-3">
                        <h2 class="card-title"><span class="badge bg-warning"><%= repo.repo.name %></span></h2>
                    </div>
                    <div class="card-body pt-0">
                        <div class="card-sub">
                            <div class="card-sub-title-wrapper">
                              
                                <div class="card-sub-meeting-info">
                                    <span class="card-sub-pro-title"><%= repo.repo.description!=null?repo.repo.description:'Sorry no description available' %></span>
                                </div>
                            </div>
                            <div class="card-sub-meeting-action p-2">
                                <a href="<%= repo.repo.url %>" class="btn btn-lg btn-success">View</a>
                            </div>
<div class="card-footer text-body-secondary">
                            <ol class="card-sub-meeting-points">
                              <div class="d-flex mb-3 gap-2 flex-wrap">
                              <% repo.languages.forEach(rex=> { %>
                                <h4><span class="badge bg-info"><%= rex %></span></h4>
                                <% }); %>
                              </div>
                            </ol>
                           </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
           
        </div>

        <nav aria-label="..." class="navbar navbar-inverse navbar-fixed-bottom">
            <ul class="pagination pagination-lg justify-content-center">
             
              <% for(var i=1; i < cpage; i++) { %>
                <li class="page-item"><a class="page-link" href="/repositories/<%= username %>/<%= i %>"><%= i %></a></li>
                <% } %>
              <li class="page-item active" aria-current="page">
                <span class="page-link"><%= cpage %></span>
              </li>
             
              <% for(var j=++cpage; j <=tpage; j++) { %>
               
              <li class="page-item"><a class="page-link" href="/repositories/<%= username %>/<%= j %>"><%= j %></a></li>
              <% } %>
            </ul>
          </nav>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/js/darkmode.min.js"></script>
  </body>
</html>
