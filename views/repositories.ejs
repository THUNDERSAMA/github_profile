<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>repositories</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-dark.min.css">
    <link href="style/rep.css" rel="stylesheet">  
</head>
  <body>
    <div class="container">
        <div class="p-5 mb-4 bg-body-tertiary rounded-3" style="background:#00000070;">
            <div class="container-fluid py-5 ">
              <h1 class="display-5 fw-bold"><span class="badge bg-secondary"><%= username %></span></h1>
              <div class="row">
              <div class="col-md-4 fs-4 p-4">
              <img src='<%= uinfo.img %>' class="rounded-circle mx-auto d-block" alt="..." style="width: 150px;">
            </div>
              <div class="col-md-8 fs-4">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><h5>Name : <span class="badge bg-secondary"><%= uinfo.name %></span></h5></li>
                    <li class="list-group-item"><h5>Followers : <span class="badge bg-secondary"><%= uinfo.followers %></span></h5></li>
                    <li class="list-group-item"><h5>Following : <span class="badge bg-secondary"><%= uinfo.following %></span></h5></li>
                    <li class="list-group-item"><h5>Public_repos : <span class="badge bg-secondary"><%= uinfo.public_repos %></span></h5></li>
                  
                  </ul>
                  <a class="btn btn-primary btn-lg" href="https://github.com/<%= username %>" >View in github</a>
                </div>
            </div>
              
            </div>
          </div>
        <div class="row">
            <% repositories.forEach(repo => { %>
            <div class="col-lg-4">
                <div class="card card-margin">
                    <div class="card-header no-border">
                        <h5 class="card-title"><%= repo.repo.name %></h5>
                    </div>
                    <div class="card-body pt-0">
                        <div class="widget-49">
                            <div class="widget-49-title-wrapper">
                                <div class="widget-49-date-primary">
                                    <span class="widget-49-date-day">09</span>
                                    <span class="widget-49-date-month">apr</span>
                                </div>
                                <div class="widget-49-meeting-info">
                                    <span class="widget-49-pro-title"><%= repo.repo.description!=null?repo.repo.description:'Sorry no description available' %></span>
                                </div>
                            </div>
                            <ol class="widget-49-meeting-points">
                              <div class="d-flex flex-row mb-3 gap-2">
                              <% repo.languages.forEach(rex=> { %>
                                <h6><span class="badge bg-primary"><%= rex %></span></h6>
                                <% }); %>
                              </div>
                            </ol>
                            <div class="widget-49-meeting-action">
                                <a href="#" class="btn btn-sm btn-primary">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
           
        </div>
        <nav aria-label="..." class="navbar navbar-inverse navbar-fixed-bottom">
            <ul class="pagination pagination-lg justify-content-center">
              <% for(var i=1; i < cpage; i++) { %>
                <li class="page-item"><a class="page-link" href="/repositories/<%= username %>/<%= i %>"><%= i %></a></li>
                <% } %>
              <li class="page-item active" aria-current="page">
                <span class="page-link"><%= cpage %></span>
              </li>
              <% for(var i=cpage+1; i <=tpage; i++) { %>
              <li class="page-item"><a class="page-link" href="/repositories/<%= username %>/<%= i %>"><%= i %></a></li>
              <% } %>
            </ul>
          </nav>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/js/darkmode.min.js"></script>
  </body>
</html>
